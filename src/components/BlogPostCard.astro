---
interface Props {
  title: string;
  description: string;
  pubDate: string;
  slug: string;
  tags?: string[];
}

const { title, description, pubDate, slug, tags } = Astro.props;
const formattedDate = new Date(pubDate).toLocaleDateString("en-US", {
  year: "numeric",
  month: "long",
  day: "numeric",
});
---

<a href={`/blog/${slug}`} class="block group">
  <article class="bg-slate-50 rounded-lg p-5 hover:shadow-md transition-shadow">
    <time datetime={pubDate} class="text-xs text-slate-500">{formattedDate}</time>
    <h3 class="font-serif font-bold text-navy-900 mt-1 group-hover:text-navy-600 transition-colors">{title}</h3>
    <p class="text-sm text-slate-600 mt-2 leading-relaxed">{description}</p>
    {tags && tags.length > 0 && (
      <div class="flex flex-wrap gap-2 mt-3">
        {tags.map((tag) => (
          <span class="bg-navy-100 text-navy-700 px-2 py-0.5 rounded text-xs">{tag}</span>
        ))}
      </div>
    )}
  </article>
</a>
