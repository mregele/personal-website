<footer class="bg-navy-950 text-slate-300 mt-20">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-12">

    <!-- Subscribe Section -->
    <div class="mb-10 pb-10 border-b border-slate-700">
      <h3 class="font-serif font-bold text-white text-sm uppercase tracking-wider mb-2">Stay Updated</h3>
