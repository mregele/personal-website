---
interface Props {
  code: string;
  title: string;
  level: string;
  description: string;
  designed?: boolean;
  materialsHref?: string;
}

const { code, title, level, description, designed, materialsHref } = Astro.props;
---

<div class="bg-slate-50 rounded-lg p-5 hover:shadow-md transition-shadow">
  <div class="flex items-start justify-between gap-3 mb-2">
    <div>
      <span class="text-xs font-semibold text-navy-600 uppercase tracking-wider">{code}</span>
      <h3 class="font-serif font-bold text-navy-900 mt-0.5">{title}</h3>
    </div>
    <span class="shrink-0 text-xs bg-navy-100 text-navy-700 px-2 py-1 rounded">{level}</span>
  </div>
  <p class="text-sm text-slate-600 leading-relaxed">{description}</p>
  {designed && (
    <p class="text-xs text-gold-600 mt-2 font-medium">Course designed by instructor</p>
  )}
  {materialsHref && (
    <a href={materialsHref} class="inline-flex items-center gap-1 mt-3 text-xs font-medium text-navy-700 hover:text-navy-900 transition-colors">
      View Course Materials
      <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/></svg>
    </a>
  )}
</div>
