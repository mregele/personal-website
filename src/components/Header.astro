---
const navLinks = [
  { href: "/", label: "Home" },
  { href: "/research", label: "Research" },
  { href: "/teaching", label: "Teaching" },
  { href: "/blog", label: "Blog" },
];

const courseLinks = [
  { href: "/teaching/social-ent", label: "Social Entrepreneurship", code: "ENTR 335" },
];

const currentPath = Astro.url.pathname;
const onCoursePage = courseLinks.some(
  (c) => currentPath === c.href || currentPath.startsWith(c.href + "/")
);
---

<header class="sticky top-0 z-50 bg-white/95 backdrop-blur border-b border-slate-200">
  <nav class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 flex items-center justify-between h-16">
    <a href="/" class="font-serif font-bold text-lg text-navy-800 hover:text-navy-600 transition-colors">
      Matthew D. Regele
    </a>

    <!-- Desktop nav -->
    <ul class="hidden md:flex items-center gap-8">
      {navLinks.map((link) => (
        <li>
          <a
            href={link.href}
            class:list={[
              "text-sm font-medium transition-colors",
              currentPath === link.href || (link.href !== "/" && currentPath.startsWith(link.href))
                ? "text-navy-700 border-b-2 border-gold-500 pb-0.5"
                : "text-slate-600 hover:text-navy-700",
            ]}
          >
            {link.label}
          </a>
        </li>
      ))}

      <!-- Course Materials dropdown -->
      <li class="relative group">
        <button
          type="button"
          class:list={[
            "text-sm font-medium transition-colors flex items-center gap-1",
            onCoursePage
              ? "text-navy-700 border-b-2 border-gold-500 pb-0.5"
              : "text-slate-600 hover:text-navy-700",
          ]}
        >
          Course Materials
          <svg class="w-3.5 h-3.5 transition-transform group-hover:rotate-180" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
          </svg>
        </button>
        <div class="absolute right-0 top-full pt-2 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-150">
          <div class="bg-white border border-slate-200 rounded-lg shadow-lg py-2 min-w-56">
            {courseLinks.map((course) => (
              <a
                href={course.href}
                class:list={[
                  "flex items-center justify-between gap-4 px-4 py-2.5 text-sm transition-colors",
                  currentPath.startsWith(course.href)
                    ? "bg-navy-50 text-navy-700 font-medium"
                    : "text-slate-600 hover:bg-slate-50 hover:text-navy-700",
                ]}
              >
                <span>{course.label}</span>
                <span class="text-xs text-slate-400 font-mono">{course.code}</span>
              </a>
            ))}
          </div>
        </div>
      </li>
    </ul>

    <!-- Mobile hamburger -->
    <button
      id="mobile-menu-btn"
      class="md:hidden p-2 text-slate-600 hover:text-navy-700"
      aria-label="Toggle menu"
      aria-expanded="false"
    >
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path id="menu-icon" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
      </svg>
    </button>
  </nav>

  <!-- Mobile menu -->
  <div id="mobile-menu" class="hidden md:hidden border-t border-slate-200 bg-white">
    <ul class="px-4 py-3 space-y-2">
      {navLinks.map((link) => (
        <li>
          <a
            href={link.href}
            class:list={[
              "block py-2 text-sm font-medium",
              currentPath === link.href || (link.href !== "/" && currentPath.startsWith(link.href))
                ? "text-navy-700"
                : "text-slate-600",
            ]}
          >
            {link.label}
          </a>
        </li>
      ))}

      <!-- Course Materials section (mobile) -->
      <li>
        <details class="group/courses">
          <summary class:list={[
            "flex items-center justify-between py-2 text-sm font-medium cursor-pointer select-none",
            onCoursePage ? "text-navy-700" : "text-slate-600",
          ]}>
            Course Materials
            <svg class="w-3.5 h-3.5 text-slate-400 transition-transform group-open/courses:rotate-180" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
            </svg>
          </summary>
          <ul class="pl-4 mt-1 space-y-1 border-l-2 border-slate-100">
            {courseLinks.map((course) => (
              <li>
                <a
                  href={course.href}
                  class:list={[
                    "flex items-center justify-between py-1.5 text-sm",
                    currentPath.startsWith(course.href)
                      ? "text-navy-700 font-medium"
                      : "text-slate-500",
                  ]}
                >
                  <span>{course.label}</span>
                  <span class="text-xs text-slate-400 font-mono">{course.code}</span>
                </a>
              </li>
            ))}
          </ul>
        </details>
      </li>
    </ul>
  </div>
</header>

<script>
  const btn = document.getElementById("mobile-menu-btn");
  const menu = document.getElementById("mobile-menu");
  btn?.addEventListener("click", () => {
    const open = menu?.classList.toggle("hidden") === false;
    btn.setAttribute("aria-expanded", String(open));
  });
</script>
